<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/changedataback">

    <TextView
        android:id="@+id/orderdetail_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="商品名稱："
        android:textColor="@color/darkblack"
        app:layout_constraintStart_toEndOf="@+id/orderdetail_img"
        app:layout_constraintTop_toTopOf="@+id/orderdetail_img" />

    <TextView
        android:id="@+id/orderdetail_tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="價格："
        android:textColor="@color/darkblack"
        app:layout_constraintBottom_toBottomOf="@+id/orderdetail_img"
        app:layout_constraintStart_toStartOf="@+id/orderdetail_tx"
        app:layout_constraintTop_toBottomOf="@+id/orderdetail_tx3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/orderdetail_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/confirmgood1"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/orderdetail_tx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="數量："
        android:textColor="@color/darkblack"
        app:layout_constraintStart_toStartOf="@+id/orderdetail_tx"
        app:layout_constraintTop_toBottomOf="@+id/orderdetail_tx" />
</android.support.constraint.ConstraintLayout>